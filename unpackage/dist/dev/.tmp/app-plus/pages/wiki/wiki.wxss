.home-tab {
  width: 100%;
  margin-top: 18rpx;
  height: 90rpx;
  background: #FFFFFF;
  position: relative;
  z-index: 10;
}
.nav-bar {
  position: relative;
  z-index: 10;
  height: 90rpx;
  white-space: nowrap;
  background-color: #fff;
}
.nav-bar .nav-item {
    display: inline-block;
    width: 150rpx;
    height: 90rpx;
    text-align: center;
    line-height: 90rpx;
    font-size: 28rpx;
    color: #A6A6A6;
    position: relative;
}
.nav-bar .nav-item:after {
      content: '';
      width: 0;
      height: 0;
      border-bottom: 6rpx solid #874A98;
      position: absolute;
      left: 50%;
      bottom: 0;
      -webkit-transform: translateX(-50%);
              transform: translateX(-50%);
      -webkit-transition: .3s;
      transition: .3s;
}
.nav-bar .current {
    color: #874A98;
    font-size: 28rpx;
    font-weight: bold;
}
.nav-bar .current:after {
      width: 50%;
}
