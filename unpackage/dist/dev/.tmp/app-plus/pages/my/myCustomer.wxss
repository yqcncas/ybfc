page {
  background: #F0F0F0;
}
.noData {
  background: #FFFFFF;
  width: 100%;
  height: 100vh;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: vertical;
  -webkit-box-direction: normal;
  -webkit-flex-direction: column;
          flex-direction: column;
}
.noData .nodata-img {
  width: 100%;
  height: 325.6rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  -webkit-box-pack: center;
  -webkit-justify-content: center;
          justify-content: center;
  margin-top: 100rpx;
}
.noData .nodata-img image {
  width: 300rpx;
  height: 325.6rpx;
}
.noData .nodata-content {
  width: 100%;
  margin-top: 40.4rpx;
  font-size: 24rpx;
  color: #A6A6A6;
  text-align: center;
}
.client {
  width: 100%;
  background: #FFFFFF;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: vertical;
  -webkit-box-direction: normal;
  -webkit-flex-direction: column;
          flex-direction: column;
}
.client-list {
  width: 720rpx;
  height: 130rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  margin-left: 30rpx;
}
.client-list .client-avatar {
  width: 90rpx;
  height: 90rpx;
  border-radius: 50%;
  background-repeat: no-repeat;
  background-size: 100% 100%;
  background-image: url('https://img.bajiaostar.com/FgkVAFlA5etvApeTeLEt2P0s822H');
}
.client-list .client-avatar image {
  width: 90rpx;
  height: 90rpx;
  border-radius: 50%;
}
.client-list .client-info {
  width: 600rpx;
  margin-left: 30rpx;
  height: 130rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  border-bottom: 2rpx solid #F0F0F0;
}
.client-list .client-info .client-detail {
  width: 460rpx;
  height: 130rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: vertical;
  -webkit-box-direction: normal;
  -webkit-flex-direction: column;
          flex-direction: column;
}
.client-list .client-info .client-detail > text:first-child {
  width: 460rpx;
  font-size: 28rpx;
  color: #4A4A4A;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
  margin-top: 20rpx;
}
.client-list .client-info .client-detail > text:nth-child(2) {
  width: 460rpx;
  margin-top: 10rpx;
  font-size: 24rpx;
  color: #9B9B9B;
}
.client-list .client-info .client-status {
  width: 110rpx;
  height: 46rpx;
  line-height: 46rpx;
  font-size: 24rpx;
  text-align: center;
  margin-top: 20rpx;
  border-radius: 4rpx;
}
.client-list .client-info .blue {
  color: #4A90E2;
  border: 2rpx solid #4A90E2;
}
.client-list .client-info .red {
  color: #D0021B;
  border: 2rpx solid #D0021B;
}
.client-list .client-info .green {
  color: #55A900;
  border: 2rpx solid #55A900;
}
.client-list .client-info .orange {
  color: #FE7838;
  border: 2rpx solid #FE7838;
}

