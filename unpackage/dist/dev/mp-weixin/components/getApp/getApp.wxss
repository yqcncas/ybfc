.bottom-tips {
  width: 100%;
  height: 100rpx;
  background: rgba(0, 0, 0, 0.5);
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  position: fixed;
  bottom: 0px;
  z-index: 99;
}
.bottom-tips > view:first-child {
  width: 500rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  position: relative;
}
.bottom-tips > view:first-child .close-icon {
  width: 26rpx;
  height: 26rpx;
  position: absolute;
  top: -10rpx;
  left: 10rpx;
}
.bottom-tips > view:first-child .close-icon image {
  width: 26rpx;
  height: 26rpx;
}
.bottom-tips > view:first-child .bottom-logo {
  width: 60rpx;
  height: 60rpx;
  margin-left: 60rpx;
}
.bottom-tips > view:first-child .bottom-logo image {
  width: 60rpx;
  height: 60rpx;
}
.bottom-tips > view:first-child .bottom-text {
  width: 350rpx;
  margin-left: 30rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: vertical;
  -webkit-box-direction: normal;
  -webkit-flex-direction: column;
          flex-direction: column;
  -webkit-box-pack: center;
  -webkit-justify-content: center;
          justify-content: center;
}
.bottom-tips > view:first-child .bottom-text > view:first-child {
  font-size: 17px;
  color: #FFFFFF;
  font-weight: bold;
}
.bottom-tips > view:first-child .bottom-text > view:last-child {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.8);
}
.bottom-tips .bottom-button {
  width: 250rpx;
  height: 100rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  -webkit-box-pack: center;
  -webkit-justify-content: center;
          justify-content: center;
  background: #874A89;
  font-size: 40rpx;
  color: #FFFFFF;
  font-weight: bold;
}

