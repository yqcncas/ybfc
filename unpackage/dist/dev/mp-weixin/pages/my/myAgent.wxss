page {
  background: #F0F0F0;
}
.noData {
  background: #FFFFFF;
  width: 100%;
  height: 100vh;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: vertical;
  -webkit-box-direction: normal;
  -webkit-flex-direction: column;
          flex-direction: column;
  padding-top: 100rpx;
}
.client {
  width: 100%;
  background: #FFFFFF;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: vertical;
  -webkit-box-direction: normal;
  -webkit-flex-direction: column;
          flex-direction: column;
}
.client-list {
  width: 720rpx;
  height: 130rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  margin-left: 30rpx;
}
.client-list .client-avatar {
  width: 90rpx;
  height: 90rpx;
  border-radius: 50%;
  background-repeat: no-repeat;
  background-size: 100% 100%;
  background-image: url('https://img.bajiaostar.com/FgkVAFlA5etvApeTeLEt2P0s822H');
}
.client-list .client-avatar image {
  width: 90rpx;
  height: 90rpx;
  border-radius: 50%;
}
.client-list .client-info {
  width: 600rpx;
  margin-left: 30rpx;
  height: 130rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  border-bottom: 2rpx solid #F0F0F0;
}
.client-list .client-info .client-detail {
  width: 460rpx;
  height: 130rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: vertical;
  -webkit-box-direction: normal;
  -webkit-flex-direction: column;
          flex-direction: column;
}
.client-list .client-info .client-detail > text:first-child {
  width: 460rpx;
  font-size: 28rpx;
  color: #4A4A4A;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
  margin-top: 20rpx;
}
.client-list .client-info .client-detail > text:nth-child(2) {
  width: 460rpx;
  margin-top: 10rpx;
  font-size: 24rpx;
  color: #9B9B9B;
}

